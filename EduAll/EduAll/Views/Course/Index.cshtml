@model IEnumerable<EduAll.Domain.Course>
@{
    var categories = ViewBag.Categories as List<EduAll.Domain.Category>;
}

<form asp-action="Index" asp-controller="Course" method="get" class="mb-24">
    <div class="header-select border border-neutral-30 bg-main-25 rounded-pill position-relative ms-0">
        <span class="select-icon position-absolute top-50 translate-middle-y inset-inline-start-0 z-1 ms-lg-4 ms-12 text-xl pointer-event-none d-flex">
            <i class="ph-bold ph-squares-four"></i>
        </span>
        <select class="js-example-basic-single border-0"
                name="categoryId"
                onchange="this.form.submit()">
            <option value="">Categories</option>
            @if (categories != null)
            {
                foreach (var cat in categories)
                {
                    <option value="@cat.Id">@cat.Name</option>
                }
            }
        </select>
    </div>
</form>

<section class="course-grid-view py-120">
    <div class="container">
        <div class="flex-between gap-16 flex-wrap mb-40">
            <span class="text-neutral-500">
                Showing @Model.Count() Results
            </span>
        </div>

        <div class="row gy-4">
            @foreach (var course in Model)
            {
                <div class="col-lg-4 col-sm-6">
                    <div class="course-item bg-main-25 rounded-16 p-12 h-100 border border-neutral-30">

                        <!-- الصورة + مدة الكورس -->
                        <div class="course-item__thumb rounded-12 position-relative overflow-hidden" style="height: 220px;">
                            <a asp-action="Details"
                               asp-controller="Course"
                               asp-route-id="@course.Id"
                               class="w-100 h-100 d-block">
                                <img src="@course.ImgUrl"
                                     alt="@course.Title"
                                     class="w-100 h-100 rounded-12 transition-2"
                                     style="object-fit: cover;" />
                            </a>

                            <div class="flex-align gap-8 bg-main-600 rounded-pill px-24 py-12 text-white position-absolute"
                                 style="top:10px; left:20px;">
                                <span class="text-2xl d-flex">
                                    <i class="ph ph-clock"></i>
                                </span>
                                <span class="text-lg fw-medium">
                                    @course.Duration h
                                </span>
                            </div>

                            <!-- زر القلب -->
                            <button type="button"
                                    class="wishlist-btn w-48 h-48 bg-white text-main-two-600 flex-center position-absolute text-2xl rounded-circle transition-2"
                                    style="top:10px; right:20px;"
                                    data-course-id="@course.Id">
                                <i class="ph ph-heart"></i>
                            </button>
                        </div>

                        <!-- محتوى الكارد -->
                        <div class="course-item__content">
                            <div>
                                <h4 class="mb-28">
                                    <a asp-action="Details"
                                       asp-controller="Course"
                                       asp-route-id="@course.Id"
                                       class="link text-line-2">
                                        @course.Title
                                    </a>
                                </h4>

                                <div class="flex-between gap-8 flex-wrap mb-16">
                                    <div class="flex-align gap-8">
                                        <span class="text-neutral-700 text-2xl d-flex">
                                            <i class="ph-bold ph-video-camera"></i>
                                        </span>
                                        <span class="text-neutral-700 text-lg fw-medium">
                                            @course.Language
                                        </span>
                                    </div>

                                    <div class="flex-align gap-8">
                                        <span class="text-neutral-700 text-2xl d-flex">
                                            <i class="ph-bold ph-chart-bar"></i>
                                        </span>
                                        <span class="text-neutral-700 text-lg fw-medium">
                                            Level @course.Level
                                        </span>
                                    </div>
                                </div>

                                <div class="flex-between gap-8 flex-wrap">
                                    <div class="flex-align gap-4">
                                        <span class="text-2xl fw-medium text-warning-600 d-flex">
                                            <i class="ph-fill ph-star"></i>
                                        </span>
                                        <span class="text-lg text-neutral-700">
                                            @course.Rate
                                        </span>
                                    </div>

                                    <div class="flex-align gap-8">
                                        <span class="text-neutral-700 text-2xl d-flex">
                                            <img src="/assets/images/thumbs/user-img1.png"
                                                 alt="User Image"
                                                 class="w-32 h-32 object-fit-cover rounded-circle" />
                                        </span>
                                        <span class="text-neutral-700 text-lg fw-medium">
                                            Instructor
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="flex-between gap-8 pt-24 border-top border-neutral-50 mt-28 border-dashed border-0">
                                <h4 class="mb-0 text-main-two-600">
                                    $@course.Price
                                </h4>
                                <a asp-action="Index"
                                   asp-controller="Cart"
                                   asp-route-courseId="@course.Id"
                                   class="flex-align gap-8 text-main-600 hover-text-decoration-underline transition-1 fw-semibold"
                                   tabindex="0">
                                    Add To Cart
                                    <i class="ph ph-arrow-right"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).on("click", ".wishlist-btn", function () {
            var btn = $(this);
            var courseId = btn.data("course-id");

            $.post("/Favorite/Add", { courseId: courseId })
                .done(function (res) {
                    if (res.success) {
                        btn.addClass("bg-main-two-600 text-white");
                        $("#wishlist-count").text(res.count);
                    }
                });
        });
    </script>
}
